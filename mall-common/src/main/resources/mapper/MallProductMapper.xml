  <select id="getVoListFilterByClassifyId" resultMap="VoResultMap">
    SELECT distinct
      p.product_id,
      p.product_name,
      p.`desc`,
      p.pic,
      p.original_price,
      p.current_price,
      p.stock,
      p.`limit`,
      p.new_status,
      p.label
    FROM
      mall_product AS p
      LEFT JOIN mall_product_classify AS pc ON pc.product_id = p.product_id
    WHERE
      pc.classify_id = #{classifyId,jdbcType=INTEGER}
      AND p.deleted = 0 AND p.publish_status = 1
      <if test="inStock == 1">
        and p.stock > 0
      </if>
      <if test="priceSort == 1">
        order by p.current_price asc
      </if>
      <if test="priceSort == 2">
